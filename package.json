{
  "name": "edux",
  "version": "1.0.0",
  "description": "HR Course MVP - MCP SDK 기반 강의 계획서 PDF 플랫폼",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/transport.ts",
    "dev:up": "pwsh -File scripts/dev-up.ps1",
    "dev:down": "pwsh -File scripts/dev-down.ps1",
    "dev:status": "pwsh -File scripts/dev-status.ps1",
    "dev:stdio": "tsx src/mcp-server.ts",
    "dev:worker": "tsx watch src/workers/pdfWorker.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "start": "node dist/transport.js",
    "start:stdio": "node dist/mcp-server.js",
    "start:worker": "node dist/workers/pdfWorker.js",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:permissions": "tsx scripts/check-permission-matrix.ts",
    "test:permissions:scenarios": "tsx scripts/check-permission-scenarios.ts"
  },
  "keywords": [
    "mcp",
    "hr",
    "course",
    "pdf"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.0.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "prisma": "^5.14.0",
    "tsx": "^4.19.0",
    "typescript-eslint": "^8.46.4",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@prisma/client": "^5.14.0",
    "@types/multer": "^2.0.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "handlebars": "^4.7.8",
    "handlebars-helpers": "^0.10.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "puppeteer": "^23.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.0"
  }
}
